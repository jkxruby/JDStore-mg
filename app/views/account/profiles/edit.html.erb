<%= simple_form_for @user, url: {action: "update"}, html: { multipart: true } do |f| %>
<%= f.input :username, disabled: true, hint: "不可修改用户名" %>
<%= f.input :email, disabled: true, hint:"不可修改邮件" %>
<%= f.input :nick_name %>
<%= f.input :avatar, label: profile_avatar_select(@user) %>
<%= f.input :cell_number %>
<%= f.input :wechat_id %>
<%= f.input :address %>
<%= f.button :submit %>

<% end %>
