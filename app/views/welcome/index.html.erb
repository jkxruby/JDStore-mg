    <h2 class="title">How it works</h2>
    <div id="carousel-1" class="carousel slide" data-ride="carousel" data-intervel=4500 >
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-1" data-slide-to="1"></li>
        <li data-target="#carousel-1" data-slide-to="2"></li>
        <li data-target="#carousel-1" data-slide-to="3"></li>
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class="wrapper">
            <div class="hiw row " id="for_talents">
              <div class="step">
                <h4>Submit Resume</h4>
                <%= image_tag("application.png") %>
              </div>
              <div class="step" >
                <h4>Get Found</h4>
                <%= image_tag("people-1.png") %>
              </div>
              <div class="step" >
                <h4>Interviewed</h4>
                <%= image_tag("business.png") %>
              </div>
              <div class="step" >
                <h4>Get Hired</h4>
                <%= image_tag("people.png") %>
              </div>
            </div>
          </div>
          <div class="carousel-caption">
            <p>Find the dream job for talents.</p>
          </div>
        </div>
        <div class="item">
          <img src="https://ww1.sinaimg.cn/large/006y8lVagy1fc1b0crrsuj31kw11yajd.jpg" alt="">
          <div class="carousel-caption">
            <p class="inverse">Through design we redefine beauty.</p>
          </div>
        </div>
        <div class="item">
          <div class="wrapper">
            <div class="hiw row" id="for_companies">
              <div class="step">
                <h4>Post Job</h4>
                <%= image_tag("signs.png") %>
              </div>
              <div class="step">
                <h4>Get Resumes</h4>
                <%= image_tag("signature.png") %>
              </div>
              <div class="step">
                <h4>Lock Talents</h4>
                <%= image_tag("search.png") %>
              </div>
            </div>
          </div>
          <div class="carousel-caption">
            <p>Get the star emplyees for company.</p>
          </div>
        </div>
        <div class="item">
          <img src="https://ww1.sinaimg.cn/large/006tNc79gy1fc3euutxjlj31kw11xqj3.jpg" alt="">
          <div class="carousel-caption">
            <p class="inverse">Throgh coding we create a new world.</p>
          </div>
        </div>
      </div>
      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-1" role="button" data-slide="prev"  style="background:none !important">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-1" role="button" data-slide="next"  style="background:none !important">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </section>
</div>
